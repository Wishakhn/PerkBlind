<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:background="@color/colorWhite"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/perk_icon"
                android:layout_marginTop="40dp"/>
            <RelativeLayout
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icnName"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:tint="@color/colorDarkPeach"
                    android:src="@drawable/ic_person"/>
                <EditText
                    android:id="@+id/NameET"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:layout_toRightOf="@+id/icnName"
                    android:textColorHint="@color/colorKayiFade"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:layout_marginBottom="6dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/colorDarkPeach"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDarkGrey"/>
      <RelativeLayout
          android:layout_marginTop="30dp"

          android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icnmail"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:tint="@color/colorDarkPeach"
                    android:src="@drawable/ic_baseline_email_24"/>
                <EditText
                    android:id="@+id/MailET"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:layout_toRightOf="@+id/icnmail"
                    android:textColorHint="@color/colorKayiFade"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:layout_marginBottom="6dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/colorDarkPeach"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDarkGrey"/>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icnpass"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:tint="@color/colorDarkPeach"
                    android:src="@drawable/ic_lock_24"/>
                <EditText
                    android:id="@+id/PassET"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:layout_toRightOf="@+id/icnpass"
                    android:textColorHint="@color/colorKayiFade"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:layout_marginBottom="6dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/colorDarkPeach"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDarkGrey"/>
     <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icnCnfrmpass"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:tint="@color/colorDarkPeach"
                    android:src="@drawable/ic_lock_24"/>
                <EditText
                    android:id="@+id/CnfrmPassET"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:layout_toRightOf="@+id/icnCnfrmpass"
                    android:textColorHint="@color/colorKayiFade"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:layout_marginBottom="6dp"
                    android:imeOptions="actionDone"
                    android:textColor="@color/colorDarkPeach"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDarkGrey"/>
            <Button
                android:layout_marginTop="100dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/regbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_black_selector"
                android:layout_marginHorizontal="5dp"
                android:enabled="false"
                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>